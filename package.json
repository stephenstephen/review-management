{
  "name": "fullstack-app",
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev:server": "pnpm --filter server dev",
    "dev:client": "pnpm --filter client dev",
    "dev": "concurrently -k \"pnpm dev:server\" \"pnpm dev:client\"",
    "build": "pnpm -r build",
    "start": "pnpm --filter server start:prod"
  },
  "devDependencies": {
    "concurrently": "^8.0.1"
  }
}
